<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backstage.order.OrderManageFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tag02"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:elevation="2dp"
        android:text="@string/btn_backstage_user"
        android:background="@drawable/ciyi_btn_shape_orderuser"
        android:state_selected="true"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tag01"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:background="@drawable/tag_state_list"
        android:elevation="2dp"
        android:state_selected="true"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tag02"
        app:layout_constraintStart_toEndOf="@+id/tag02"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/tag03"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:background="@drawable/tag03_state_list"
        android:elevation="2dp"
        android:state_selected="true"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tag01"
        app:layout_constraintStart_toEndOf="@+id/tag01"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/tag04"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:background="@drawable/tag04_state_list"
        android:elevation="2dp"
        android:state_selected="true"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tag01"
        app:layout_constraintStart_toEndOf="@+id/tag03"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/backstageCollor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btMenu"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:backgroundTint="#49454F"
            android:src="@drawable/baseline_menu_24" />

        <TextView
            android:id="@+id/text_backstage_accountname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accountname"
            android:textColor="@color/cardview_light_background" />
    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/search"
        android:layout_width="369dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="122dp">

        <SearchView
            android:id="@+id/btSearch"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:background="@drawable/ciyi_shape_search"
            android:gravity="center"
            android:queryBackground="@android:color/transparent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_backstage_add"
            android:layout_width="49dp"
            android:layout_height="26dp"
            android:layout_margin="12dp"
            android:background="@drawable/ciyi_button_shape"
            android:text="@string/btAdd" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/textSearchResultTitle"
        android:layout_width="369dp"
        android:layout_height="40dp"
        android:background="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/search"
        app:layout_constraintStart_toStartOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/search"
        tools:ignore="UnknownId">


        <TextView
            android:id="@+id/orderNum"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/orderNUm"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/orderStatus"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/orderTime"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="505dp"
        android:background="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textSearchResultTitle"
        app:layout_constraintStart_toStartOf="@+id/textSearchResultTitle"
        app:layout_constraintTop_toBottomOf="@+id/textSearchResultTitle">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"


            />
    </LinearLayout>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="search" />

</androidx.constraintlayout.widget.ConstraintLayout>