<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backstage.complaint.BackstageComplaintManageFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_backstage_complaint_manage_dealing"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:text="@string/btn_backstage_complaint_manage_dealing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_backstage_account_manage_main_user"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:text="@string/btn_backstage_complaint_manage_done"
        app:layout_constraintBottom_toBottomOf="@+id/btn_backstage_complaint_manage_dealing"
        app:layout_constraintStart_toEndOf="@+id/btn_backstage_complaint_manage_dealing"
        app:layout_constraintTop_toTopOf="@+id/btn_backstage_complaint_manage_dealing" />

    <LinearLayout
        android:id="@+id/ll_backstage_complaint_manage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_backstage_account_manage_main_user">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/sv_backstage_complaint_manage"
                android:layout_width="235dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                app:iconifiedByDefault="false" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_backstage_complaint_manage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>