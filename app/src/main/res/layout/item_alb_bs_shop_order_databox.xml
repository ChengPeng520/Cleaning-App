<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_bs_shop_order_ti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_bs_shop_order_order"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_bs_shop_order_order_ti"
            android:textColor="@color/textPrimary"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bs_shop_order_status"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_bs_shop_order_status_ti"
            android:textColor="@color/error" />

        <TextView
            android:id="@+id/tv_bs_shop_order_time"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tv_bs_user_main_time_ti"
            android:textColor="@color/textPrimary" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>