<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_backstage_account_manage_main_title"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_backstage_account_manage_main_databox_email"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/tv_backstage_account_manage_main_databox_email_ex"
            android:textColor="#414141" />

        <TextView
            android:id="@+id/tv_backstage_account_manage_main_databox_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/tv_backstage_account_manage_main_databox_name_ex"
            android:textColor="#414141" />

        <TextView
            android:id="@+id/tv_backstage_account_manage_main_databox_time"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/tv_backstage_account_manage_main_databox_time_ex"
            android:textColor="#414141" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>