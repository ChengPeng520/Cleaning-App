<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cleaningapp.backstage.usermanage.viewModel.BsUserServiceDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_bs_user_serv_databox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_bs_user_serv_databox_unread"
                android:layout_width="8dp"
                android:layout_marginLeft="10dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/alb_unread_circle" />

            <ImageView
                android:id="@+id/iv_bs_user_serv_databox_avatar"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="9dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                app:imageResource="@{viewModel.chat.avatar}" />

            <LinearLayout
                android:layout_width="197dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bs_user_serv_databox_email_ex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:layout_gravity="center_vertical"
                    android:text="@{viewModel.chat.email}" />

                <TextView
                    android:id="@+id/tv_bs_user_serv_databox_text_ex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:layout_gravity="center_vertical"
                    android:text="@{viewModel.chat.text}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bs_user_serv_databox_time_ex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textPrimary"
                    android:text="@{viewModel.chat.createTime}" />

                <TextView
                    android:id="@+id/tv_bs_user_serv_databox_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tv_bs_user_serv_databox_closed"
                    android:textColor="@color/textPrimary" />
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>