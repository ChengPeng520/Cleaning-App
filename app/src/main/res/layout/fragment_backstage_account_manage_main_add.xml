<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backstage.BackstageAccountManageMainAddFragment">

    <?xml version="1.0" encoding="utf-8"?>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_backstage_account_manage_main_add_user"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:text="@string/btn_backstage_account_manage_main_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_backstage_account_manage_main_add_check"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:text="@string/btn_backstage_account_manage_main_check"
        app:layout_constraintBottom_toBottomOf="@+id/btn_backstage_account_manage_main_add_user"
        app:layout_constraintStart_toEndOf="@+id/btn_backstage_account_manage_main_add_user"
        app:layout_constraintTop_toTopOf="@+id/btn_backstage_account_manage_main_add_user" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_backstage_account_manage_main_add_suspend"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:text="@string/btn_backstage_account_manage_main_suspend"
        app:layout_constraintBottom_toBottomOf="@+id/btn_backstage_account_manage_main_add_check"
        app:layout_constraintStart_toEndOf="@+id/btn_backstage_account_manage_main_add_check"
        app:layout_constraintTop_toTopOf="@+id/btn_backstage_account_manage_main_add_check" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_backstage_account_manage_main_add_service"
        android:layout_width="55dp"
        android:layout_height="42dp"
        android:text="@string/btn_backstage_account_manage_main_service"
        app:layout_constraintBottom_toBottomOf="@+id/btn_backstage_account_manage_main_add_suspend"
        app:layout_constraintStart_toEndOf="@+id/btn_backstage_account_manage_main_add_suspend"
        app:layout_constraintTop_toTopOf="@+id/btn_backstage_account_manage_main_add_suspend" />

    <LinearLayout
        android:id="@+id/ll_backstage_account_manage_main_add_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_backstage_account_manage_main_add_user"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/ll_backstage_account_manage_main_add_backarrow"
            android:layout_width="325dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_backstage_account_manage_main_add_backarrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_backarrow"
                app:iconifiedByDefault="false" />

            <LinearLayout
                android:id="@+id/ll_backstage_account_manage_main_add_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_backstage_account_manage_main_save"
                    android:layout_width="54dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/btn_backstage_account_manage_main_save" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_backstage_account_manage_main_add_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_backstage_account_manage_main_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_backstage_account_manage_main_add_account" />

            <EditText
                android:id="@+id/edtTxt_backstage_account_manage_main_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="17"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_backstage_account_manage_main_add_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_backstage_account_manage_main_add_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_backstage_account_manage_main_add_password" />

            <EditText
                android:id="@+id/edtTxt_backstage_account_manage_main_add_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="17"
                android:inputType="textPassword"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_backstage_account_manage_main_add_exist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_backstage_account_manage_main_add_exist"
        android:textColor="#E95E5E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_backstage_account_manage_main_base"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>