<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cleaningapp.customer.recyclerView.CouponViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/clr_cusCoupon_discount">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.22" />

        <FrameLayout
            android:id="@+id/fl_discount"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:layout_margin="4dp"
            android:background="@color/clr_cusCoupon_discount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="8折" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_cusCoupon_limitedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/txt_cusCoupon_limitedTime"
            android:textColor=" #FF0808"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/fl_discount"
            app:layout_constraintTop_toTopOf="@+id/fl_discount" />

        <TextView
            android:id="@+id/tv_cusCoupon_lowConsump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{@string/txt_cusCoupon_lowConsump(viewModel.Coupon.minCost)}"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toBottomOf="@+id/tv_cusCoupon_limitedTime"
            tools:text="低消500元才可適用" />


        <TextView
            android:id="@+id/tv_cusCoupon_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@{@string/txt_cusCoupon_deadline(viewModel.Coupon.exp)}"
            android:textColor="@color/clr_cusCoupon_deadline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_cusCoupon_lowConsump"
            app:layout_constraintTop_toBottomOf="@id/tv_cusCoupon_lowConsump"
            tools:text="即將消失: 剩下1天" />

        <Button
            android:id="@+id/bt_cusCoupon_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/white"
            android:text="@string/txt_use"
            android:textColor="@color/clr_cusCoupon_obtain"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cusCoupon_deadline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>