<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignupApplyInfoFragment">

    <ImageView
        android:id="@+id/iv_applyinfo_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_back" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/tv_applyinfo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_suinfo_title"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_suinfo_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_signup_next"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintVertical_bias="0.937" />

    <ImageView
        android:id="@+id/iv_applyinfo_personalPhoto"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/icon_personalphoto" />

    <ImageView
        android:id="@+id/iv_applyinfo_camera"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_applyinfo_personalPhoto"
        app:layout_constraintEnd_toEndOf="@+id/iv_applyinfo_personalPhoto"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="@+id/iv_applyinfo_personalPhoto"
        app:layout_constraintTop_toTopOf="@+id/iv_applyinfo_personalPhoto"
        app:layout_constraintVertical_bias="0.9"
        app:srcCompat="@drawable/icon_camera" />

    <EditText
        android:id="@+id/edtTxt_applyinfo_name"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:paddingStart="10dp"
        android:background="@drawable/field_style"
        android:ems="10"
        android:hint="@string/edtTxt_suinfo_name"
        android:inputType="textPersonName"
        android:textColorHint="@color/material_dynamic_neutral60"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edtTxt_applyinfo_sex"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:background="@drawable/field_style"
        android:ems="10"
        android:hint="@string/edtTxt_suinfo_sex"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="@color/material_dynamic_neutral60"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt_applyinfo_name"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/edtTxt_applyinfo_phone"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:background="@drawable/field_style"
        android:ems="10"
        android:hint="@string/edtTxt_suinfo_phone"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColorHint="@color/material_dynamic_neutral60"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt_applyinfo_sex"
        app:layout_constraintVertical_bias="0.02" />

    <EditText
        android:id="@+id/edtTxt_applyinfo_intro"
        android:layout_width="327dp"
        android:layout_height="168dp"
        android:background="@drawable/field_style"
        android:ems="10"
        android:hint="@string/edtTxt_suinfo_intro"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingBottom="120dp"
        android:textColorHint="@color/material_dynamic_neutral60"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/edtTxt_applyinfo_phone"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_applyinfo_uploadtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_applyinfo_uploadtxt"
        android:textColor="@color/material_dynamic_neutral10"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline5"
        app:layout_constraintVertical_bias="0.08" />

</androidx.constraintlayout.widget.ConstraintLayout>