<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.fragment.CsOderConfirmedFragment">

    <ImageButton
        android:id="@+id/btn_csOderConfirmed_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_oderConfirmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txt_oderConfirmed"
        android:textColor="@color/clr_csTitle"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_csOderConfirmed_back"
        app:layout_constraintStart_toEndOf="@+id/btn_csOderConfirmed_back"
        app:layout_constraintTop_toTopOf="@+id/btn_csOderConfirmed_back" />

    <LinearLayout
        android:id="@+id/ll_oderDetail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/clr_cs_formBackground"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_oderConfirmed">

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/tv_csOderDate"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_csOderDate"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_csOderDatePicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:text="帶入打掃日期" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/tv_csOderTime"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/txt_csOderTime"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_csOderTimePicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:text="帶入打掃時數" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/tv_csOderAddress"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_csOderAddress"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_csOderAddressPicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:text="帶入地址" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_area"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_room" />

            <TextView
                android:id="@+id/tv_csOderCleanArea"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_csOderCleanArea"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_csOderCleanAreaPicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                tools:text="帶入打掃區域" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_toolsAll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_toolsTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tools"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_editnote" />

                <TextView
                    android:id="@+id/tv_csOderConfirmedTools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/txt_csOderConfirmedTools"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_csOderConfirmedToolsHad"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:text="帶入已有工具及需求" />
        </LinearLayout>
    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btn_cs_NavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#569DAA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/cs_bt_navbar">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <Button
        android:id="@+id/bt_csOderSubmit"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/clr_cusCoupon_obtain"
        android:text="@string/txt_confirmAndSubmit"
        app:layout_constraintBottom_toTopOf="@+id/btn_cs_NavView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_cost"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="140dp"
        android:background="@color/clr_cs_formBackground"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_oderDetail">

        <TextView
            android:id="@+id/tv_csOderConfirmedCost"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/txt_Cost"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_csOderComfirmedCostFilled"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="帶入金額" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_csOderConfirmedCharge"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/clr_cs_formBackground"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_cost">

        <TextView
            android:id="@+id/tv_csOderConfirmedCharge"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/txt_csOderConfirmedCharge"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_csOderComfirmedChargeFilled"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="帶入金額" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_csOderConfirmedCoupon"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/clr_cs_formBackground"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_csOderConfirmedCharge">

        <TextView
            android:id="@+id/tv_csOderConfirmedCoupon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/txt_coupon"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_csOderConfirmedCouponFilled"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="帶入金額" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@color/clr_cs_formBackground"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_csOderConfirmedCoupon">

        <TextView
            android:id="@+id/tv_csOderConfirmedTotal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/txt_total"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_csOderComfirmedTotalFilled"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="帶入金額" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>