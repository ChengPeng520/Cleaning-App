<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backstage.coupon.BackstageCouponCreatFragment">

    <TextView
        android:id="@+id/tv_ti_coupon_creat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="4dp"
        android:text="@string/tv_ti_coupon_create_name"
        app:layout_constraintEnd_toStartOf="@+id/editText_coupon_edit_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_coupon_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/bs_order_shape"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:text="@string/editText_coupon_modify_name"
        android:textColorHint="@color/textSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ti_coupon_creat_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ti_coupon_creat_name" />


    <TextView
        android:id="@+id/tv_ti_coupon_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:text="@string/tv_ti_coupon_percentage"
        app:layout_constraintEnd_toStartOf="@+id/edText_bs_coupon_percentage"
        app:layout_constraintStart_toStartOf="@+id/tv_ti_coupon_creat_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_ti_coupon_creat_name" />

    <EditText
        android:id="@+id/edText_bs_coupon_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/bs_order_shape"
        android:ems="4"
        android:inputType="number"
        android:padding="4dp"
        android:text="@string/editText_coupon_modify_percentage"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ti_coupon_percentage"
        app:layout_constraintStart_toEndOf="@+id/tv_ti_coupon_percentage"
        app:layout_constraintTop_toTopOf="@+id/tv_ti_coupon_percentage" />

    <TextView
        android:id="@+id/tv_ti_coupon_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/tv_ti_coupon_quantity"
        app:layout_constraintStart_toStartOf="@+id/tv_ti_coupon_percentage"
        app:layout_constraintTop_toBottomOf="@+id/tv_ti_coupon_percentage" />


    <EditText
        android:id="@+id/editText_coupon_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/bs_order_shape"
        android:ems="10"
        android:inputType="number"
        android:padding="4dp"
        android:text="@string/editText_coupon_modify_quantity"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ti_coupon_quantity"
        app:layout_constraintStart_toEndOf="@+id/tv_ti_coupon_quantity"
        app:layout_constraintTop_toTopOf="@+id/tv_ti_coupon_quantity" />

    <EditText
        android:id="@+id/editText_coupon_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/bs_order_shape"
        android:ems="10"
        android:inputType="number"
        android:padding="4dp"
        android:text="@string/editText_bs_coupon_modify_limit"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ti_coupon_timelimit"
        app:layout_constraintStart_toEndOf="@+id/tv_ti_coupon_timelimit"
        app:layout_constraintTop_toTopOf="@+id/tv_ti_coupon_timelimit" />

    <TextView
        android:id="@+id/tv_ti_coupon_timelimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/tv_ti_coupon_timelimit"
        app:layout_constraintStart_toStartOf="@+id/tv_ti_coupon_quantity"
        app:layout_constraintTop_toBottomOf="@+id/tv_ti_coupon_quantity" />

    <TextView
        android:id="@+id/tv_ti_coupon_minimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/tv_ti_coupon_minimum"
        app:layout_constraintStart_toStartOf="@+id/tv_ti_coupon_timelimit"
        app:layout_constraintTop_toBottomOf="@+id/tv_ti_coupon_timelimit" />

    <EditText
        android:id="@+id/editText_bs_coupon_minimum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        android:background="@drawable/bs_order_shape"
        android:ems="10"
        android:inputType="number"
        android:padding="4dp"
        android:text="@string/editText_coupon_modify_minimum"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ti_coupon_minimum"
        app:layout_constraintStart_toEndOf="@+id/tv_ti_coupon_minimum"
        app:layout_constraintTop_toTopOf="@+id/tv_ti_coupon_minimum" />

    <TextView
        android:id="@+id/tv_ti_bs_coupon_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/tv_ti_coupon_discount"
        app:layout_constraintBottom_toBottomOf="@+id/edText_bs_coupon_percentage"
        app:layout_constraintStart_toEndOf="@+id/edText_bs_coupon_percentage"
        app:layout_constraintTop_toTopOf="@+id/edText_bs_coupon_percentage" />

    <EditText
        android:id="@+id/edText_bs_coupont_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@drawable/bs_order_shape"
        android:ems="4"
        android:inputType="number"
        android:padding="4dp"
        android:text="@string/tv_coupon_modify_discount"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ti_bs_coupon_discount"
        app:layout_constraintStart_toEndOf="@+id/tv_ti_bs_coupon_discount"
        app:layout_constraintTop_toTopOf="@+id/tv_ti_bs_coupon_discount" />

    <TextView
        android:id="@+id/tv_ti_coupon_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/tv_ti_coupon_already"
        app:layout_constraintStart_toStartOf="@+id/tv_ti_coupon_minimum"
        app:layout_constraintTop_toBottomOf="@+id/tv_ti_coupon_minimum" />

    <CheckBox
        android:id="@+id/checkbox_coupon_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ti_coupon_already"
        app:layout_constraintStart_toEndOf="@+id/tv_ti_coupon_already"
        app:layout_constraintTop_toTopOf="@+id/tv_ti_coupon_already">

    </CheckBox>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_coupon_creat_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="記得補"
        android:textSize="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/editText_bs_coupon_minimum"
        app:layout_constraintStart_toEndOf="@+id/tv_ti_coupon_minimum"
        app:layout_constraintTop_toBottomOf="@+id/editText_bs_coupon_minimum" />


</androidx.constraintlayout.widget.ConstraintLayout>