<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cleaningapp.customer.viewModel.CsHomePageViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        tools:context=".customer.csHomePage.CsHomePageFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_csHomePage_comment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_csHome_comment" />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_csServiceTerms"
            android:layout_width="0dp"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_csHome_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tv_csHome_specialOffer"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/fl_csHome_orderTB"
            app:layout_constraintTop_toBottomOf="@+id/fl_csHome_orderTB" />

        <TextView
            android:id="@+id/tv_csHome_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tv_csHome_comment"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/fl_csHome_coupon"
            app:layout_constraintTop_toBottomOf="@+id/fl_csHome_coupon" />

        <FrameLayout
            android:id="@+id/fl_csHome_orderTB"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_csHome_coupon"
            app:layout_constraintEnd_toEndOf="@+id/vp_csServiceTerms"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/vp_csServiceTerms"
            app:layout_constraintTop_toBottomOf="@+id/vp_csServiceTerms"
            app:layout_constraintVertical_bias="0.0">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_csHome_coupon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_csHome_coupon"
            app:layout_constraintTop_toBottomOf="@+id/tv_csHome_coupon">

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>