<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cleaningapp.customer.csUserPage.CsUserPageViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        tools:context=".customer.csUserPage.CsUserPageFragment">


        <Button
            android:id="@+id/btn_csUserPage_profile"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:backgroundTint="@color/white"
            android:text="@string/txt_profile"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:icon="@drawable/account_outline"
            app:iconSize="30sp"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_csUserPage_logOut"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:text="@string/txt_csUserPage_logOut"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:icon="@drawable/ic_logout"
            app:iconSize="30sp"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/btn_csUserPage_profile"
            app:layout_constraintStart_toStartOf="@+id/btn_csUserPage_profile"
            app:layout_constraintTop_toBottomOf="@+id/btn_csUserPage_discount" />

        <Button
            android:id="@+id/btn_csUserPage_discount"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/white"
            android:text="@string/txt_seeCoupon"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:icon="@drawable/ic_cs_coupon"
            app:iconSize="30sp"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/btn_csUserPage_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btn_csUserPage_profile"
            app:layout_constraintTop_toBottomOf="@+id/btn_csUserPage_profile" />

        <com.example.cleaningapp.CircleImageView
            android:id="@+id/imageView12"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline19"
            android:imageResource="@{viewModel.profile.image}" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

