<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.cleaningapp.backstage.viewmodel.OrderViewModel" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/orderNumList"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@{viewModel.order.number}"/>

        <TextView
            android:id="@+id/orderStatusList"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@{viewModel.order.status}"/>

        <TextView
            android:id="@+id/orderDateList"
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@{viewModel.order.date}"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>