<resources>
    <!-- Base application theme. -->
    <style name="Theme.CleaningApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CleanerActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="loginBtnSubmitStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/login_btn_submit_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customerBtnSubmitStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/customer_btn_submit_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cleanerBtnSubmitStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/cleaner_btn_submit_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/sv_cleaner_shop_style</item>
    </style>

    <style name="allChatRoomFromStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/all_chat_room_from_shape</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="allChatRoomToStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/all_chat_room_to_shape</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">#E9ED32</item>
    </style>
</resources>